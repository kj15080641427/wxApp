<view class='index'>
  <!-- 搜索框 -->
  <view class='index-layout index-input-height'>
  <view class='index-search'>
    <image src='../../image/homeicon_3x/home page_01_3x.png' style='width:40rpx;height:40rpx'></image>
    <input placeholder='搜索问题、律师、服务' placeholder-style='color:#ffffff;padding-left:20rpx' confirm-type="search" ></input>
  </view>
    <image src='../../image/homeicon_3x/home page_02_3x.png' class='index-news'></image>
    <view class='index-tips'>2</view>
  </view>
  <!-- 图标 -->
  <view class='index-layout'>
    <view class='index-ml'>
      <image src='../../image/homeicon_3x/home page_03_3x.png' style='width:150rpx;height:150rpx'></image>
      <label class='index-text-style'>免费咨询</label>
      <view class='index-text-style-mini'>
        <label class='index-text-style-green'>免费</label>
        <label class='index-text-style-gray'>排忧解难</label>
      </view>
    </view>
    <view  class='index-mr' bindtap="advisory">
      <image src='../../image/homeicon_3x/home page_04_3x.png' style='width:150rpx;height:150rpx;margin-left:20rpx' ></image>
      <label class='index-text-style'>快速咨询</label>
      <view class='index-text-style-mini'>
        <label class='index-text-style-green'>执业律师</label>
        <label class='index-text-style-gray'>即时通话</label>
      </view>
    </view>

    <view  class='index-mr'>
      <image src='../../image/homeicon_3x/home page_05_3x.png' style='width:150rpx;height:150rpx'></image>
      <label class='index-text-style'>专家服务</label>
      <view class='index-text-style-mini'>
        <label class='index-text-style-gray'>知名顾问</label>
        <label class='index-text-style-green '>一对一</label>
      </view>
    </view>

  </view>
  <!-- 弹窗 -->
<view class='maskLayer' wx:if="{{chooseSize}}" bindtap='hideModal'></view>
<view class='choose' wx:if="{{choose}}" animation='{{animationData}}'>
  <!-- 热线咨询 -->
  <view class="modal-dialog">
      <image src="../../image/homeicon_3x/home page_07_3x.png"style="width:80rpx;height:80rpx;margin-left:30rpx" />
    <view>
      <view style="font-size:28rpx">热线咨询</view>
      <view class=""style="font-size:20rpx" >免费电话咨询,限时15分钟</view>
    </view>
    <image src="../../image/homeicon_3x/home page_10_3x.png" style="width:40rpx;height:40rpx"/>
  </view>
  <!-- 图文咨询 -->
  <view class="modal-dialog" style="margin-top:30rpx">
      <image src="../../image/homeicon_3x/home page_08_3x.png"style="width:80rpx;height:80rpx;margin-left:30rpx" />
    <view>
      <view style="font-size:28rpx">图文咨询</view>
      <view class=""style="font-size:20rpx" >专业律师回复,轻微问题推荐使用</view>
    </view>
    <image src="../../image/homeicon_3x/home page_10_3x.png" style="width:40rpx;height:40rpx"/>
  </view>
  <!-- 取消按钮 -->
  <view style="display:flex;justify-content:center;margin-top:30rpx" bindtap="hideModal">
    <image src="../../image/homeicon_3x/home page_11_3x.png" style="width:40rpx;height:40rpx;"/>
  </view>
</view>
  
  <!-- 中部轮播图片 -->
  
  <swiper indicator-dots="{{indicatorDots}}"
  autoplay="true" interval="{{interval}}" duration="{{duration}}" 
  previous-margin="20px" next-margin='20px' circular="true"  style="height:260rpx;display:flex;justify-content: center;margin-top:65rpx">
    <block wx:for="{{imgUrls}}" wx:key="index">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="750" height="200"/>
      </swiper-item>
    </block>
  </swiper>

<!-- 服务动态 -->
  <view class='index-service'>
    <image src='../../image/homeicon_3x/home page_06_3x.png' style='width:90rpx;height:90rpx;margin-top:30rpx'></image>
    <view class='index-service-right'>
      <view class='index-layout'>
        <view>王宏兵律师完成了一次房产土地方面的咨询</view>
        <view style='font-size:20rpx;margin-left:45rpx'>3分钟前</view>
      </view>
      <view class='index-layout' style='margin-top:30rpx'>
        <view>刘妍律师完成了一次婚姻家事方面的咨询</view>
        <view style='font-size:20rpx;margin-left:45rpx'>刚刚</view>
      </view>
    </view>
  </view>
<!-- 热门推荐 -->
  <view class='index-layout index-tab-margin'>
    <view  class='index-text-style'>
      <view class="index-green-line"></view>
      <label  class='index-text-style'style="font-size:32rpx">热门推荐</label>
    </view>
    <view class="" catchtap='loadMorePopular'>
      <label  style='font-size:28rpx;color:#b5b5b6'>更多</label>
      <image src="../../image/homeicon_3x/home page_09_3x.png" style="width:20rpx;height:20rpx;margin-left:10rpx"/>
    </view>
  </view>
<!-- 横向滑动列表 -->
<scroll-view scroll-x class="scroll-x">
  <view wx:for="{{popular}}" wx:key="{{index}}" wx:for-index="{{idx}}" class="view-parent">
    <view class="view-item" bindtap="list">{{idx}} {{item.text}}</view>
  </view>
</scroll-view>
<view class="index-tab-margin">
  <view class='index-lawyer-icon'></view>
  <view class="index-lawyer-name">邓松岩</view>
  <view class="index-lawyer-remark">本周人气冠军</view>
</view>
<!-- 文章 -->
  <view class="" wx:if="{{true}}" >
    <include src="../component/index.wxml"></include>
    <include src="../component/index.wxml"></include>
    <include src="../component/index.wxml"></include>
    <include src="../component/index.wxml"></include>
  </view >
    <view class="" wx:if="{{true}}" wx:if="{{more}}">
    <include src="../component/index.wxml"></include>
    <include src="../component/index.wxml"></include>
    <include src="../component/index.wxml"></include>
    <include src="../component/index.wxml"></include>
  </view >

  <!-- </view> -->
  <!-- 加载更多 -->
  <view class='index-layout-center' bindtap="test" >
    <view class='index-more' bindtap='loadMore'>加载更多</view>
  </view>
</view>