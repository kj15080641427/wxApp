.chart{
    background: #f1f1f1;
}
.chart .require{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    position: fixed;
    top: 0;
    left: 0;
    background: #ffeabc;
    color: #ff4220;
    font-size: 24rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    z-index: 1999;
}
.chart .require-switch{
    float: right;
    color: #4da7f1;
}
.chart .require-list{
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
    position: fixed;
    top: 60rpx;
    left: 0;
    z-index: 1999;
    background: #fff;
}
.chart .chart-content{
    width: 100%;
    padding: 35rpx 35rpx 115rpx 35rpx;
    box-sizing: border-box;
    position: relative;
    height:100vh;
}
.chart .msg-list{
    width: 100%;
    display: flex;
    margin: 30rpx 0;
}
.chart .custom{
    background: #b5b5b5;
    color: #333;
    padding: 6rpx 10rpx;
    border-radius: 10rpx;
    font-size: 24rpx;
    margin: 16rpx 0;
    position: relative;
    left: 50%;
    transform: translate(-50%,0);
}
.chart .msg-list .avatar{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    overflow: hidden;
}
.chart .msg-list .text-box{
    flex: 1;
    position: relative;
    z-index: 99;
}
.chart .msg-list .text-box .text{
    display: inline-block;
    max-width: 100%;
    border: 1px solid #b5b5b5;
    font-size: 30rpx;
    color: #333;
    border-radius: 10rpx;
    padding: 20rpx 30rpx;
    word-break:break-word;
}
.chart .msg-list .text-box .audio{
    width: 200rpx;
    position: relative;
}
.chart .msg-list .text-box .audio .audio-img{
    width: 30rpx;
    height: 30rpx;
}
.chart .msg-list .avatar .avatar-img{
    width: 100%;
    height: 100%;
}
.chart .msg-list .hidden{
    width: 90rpx;
    height: 90rpx;
}
.chart .my-msg .text-box .text{
    background: #83ffa0;
    float: right;
    min-height: 90rpx;
    box-sizing: border-box;
}
.chart .my-msg .text-box .audio .audio-duration{
    position: absolute;
    left: -30rpx;
    top: 20rpx;
}
.chart .my-msg .avatar{
    margin-left: 25rpx;
}
.chart .my-msg .text-box::before{
    content: '';
    border-top: 16rpx solid transparent;
    border-left: 16rpx solid #b5b5b5;
    border-right: 16rpx solid transparent;
    border-bottom: 16rpx solid transparent;
    position: absolute;
    top: 32rpx;
    right: -26rpx;
    z-index: 99;
}
.chart .my-msg .text-box::after{
    content: '';
    border-top: 16rpx solid transparent;
    border-left: 16rpx solid #83ffa0;
    border-right: 16rpx solid transparent;
    border-bottom: 16rpx solid transparent;
    position: absolute;
    top: 32rpx;
    right: -24rpx;
    z-index: 100;
}
.chart .lawyer-msg .text-box .text{
    background: #fff;
    min-height: 60rpx;
    box-sizing: border-box;
}
.chart .lawyer-msg .text-box .audio-duration{
    position:absolute;
    right:-45rpx;
    top:0rpx;
    width:40rpx;
}
.chart .lawyer-msg .avatar{
    margin-right: 25rpx;
}
.chart .lawyer-msg .text-box::before{
    content: '';
    border-top: 16rpx solid transparent;
    border-right: 16rpx solid #b5b5b5;
    border-left: 16rpx solid transparent;
    border-bottom: 16rpx solid transparent;
    position: absolute;
    top: 30rpx;
    left: -28rpx;
    z-index: 99;
}
.chart .lawyer-msg .text-box::after{
    content: '';
    border-top: 16rpx solid transparent;
    border-right: 16rpx solid #fff;
    border-left: 16rpx solid transparent;
    border-bottom: 16rpx solid transparent;
    position: absolute;
    top: 30rpx;
    left: -26rpx;
    z-index: 100;
}

.chart .input-box{
    box-sizing: border-box;
    /* display: flex; */
    width: 100%;
    min-height: 100rpx;
    /* padding: 15rpx 125rpx; */
    padding: 15rpx 125rpx 15rpx 35rpx;
    border-top: 1rpx solid #e7e7e7; 
    background: #F4F4F4;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 101;
}
.chart .input-box.isRecord{
    padding-right: 35rpx;
}
.chart .input-box .audio,.chart .input-box .more{
    width: 70rpx;
    height: 70rpx;
    /* background: #999; */
}
.chart .input-box .audio{
    position:fixed;
    bottom: 15rpx;
    left: 35rpx;
}
.chart .input-box .input .more{
    line-height: 70rpx;
    text-align: center;
    font-size: 28rpx;
    color: #1d75bb;
    border: none;
    padding: 0;
    position:fixed;
    bottom: 15rpx;
    right: 35rpx;
    background: none;
}
.chart .input-box .input .more::after{
    border: none;
}
.chart .input-box .audio>image,.chart .input-box .more>image{
    width: 100%;
    height: 100%;
}
.chart .input-box .input{
    /* flex: 1; */
    /* margin: 0 20rpx; */
    width:100%;
    border:1rpx solid #e7e7e7;
    border-radius: 5rpx;
    background: #fff;
    padding: 0 18rpx;
    box-sizing: border-box;
}
.chart .input-box .input textarea{
    width: 100%;
    max-height: 210rpx;
    font-size: 28rpx;
    line-height: 1.5;
    padding: 2rpx 0;
    /* box-sizing: border-box; */
}
.chart .record-btn{
    flex: 1;
    margin: 0 20rpx;
    font-size: 28rpx;
    text-align: center;
    line-height: 70rpx;
    border: 1px solid #e8e8e8;
    border-radius: 10rpx;
}
.chart .record-btn.active{
    background: rgba(80, 80, 80, 0.5)
}