
.msg-bar{
    display: flex;
    background: #fff;
}
.msg-bar .bar-item{
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
    position: relative;
}
.msg-bar .bar-item.active::after{
    content: '';
    width: 100%;
    height: 4rpx;
    background: #1ec88c;
    position: absolute;
    bottom: 0;
    left: 0;
}
.message .msg-count{
    font-size: 24rpx;
    background: #ff4220;
    padding: 4rpx 10rpx;
    display: inline-block;
    line-height: 1;
    color: #fff;
    border-radius: 25%;
    position: absolute;
    top: 20rpx;
    left: 50%;
    margin-left: 70rpx;
}
.msg-list .list-item{
    display: flex;
    height: 150rpx;
    background: #fff;
    border-top: 1rpx solid #f1f1f1;
}
.msg-list .list-tap{
    background: #f4f4f4;
}
.msg-list .list-item .avatar{
    width: 150rpx;
    position: relative;
}
.msg-list .list-item .avatar .avatar-img{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin: 0 auto;
    background: #999;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}
.msg-list .list-item .avatar .count{
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    background: #ff4220;
    color: #fff;
    font-size: 20rpx;
    border-radius: 50%;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
}
.msg-list .list-item .body{
    flex: 1
}
.msg-list .list-item .body .name{
    margin: 30rpx 0;
    font-size: 30rpx;
    color: #323232;
}
.msg-list .list-item .body .info{
    font-size: 24rpx;
    color: #717171;
}