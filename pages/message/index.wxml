<view class="message">
    <view class="msg-bar">
        <view class="bar-item {{content == 'demand' ? 'active' : ''}}" data-content="demand" bindtap="switchTab">我的需求 <view class="msg-count" wx:if="{{ messageCount > 0 }}">{{ messageCount }}</view></view>
        <view class="bar-item {{content == 'message' ? 'active' : ''}}" data-content="message" bindtap="switchTab">我的消息</view>
    </view>

    <view wx:if="{{content == 'demand'}}" class="msg-list">
        <view wx:for="{{conversationList}}" wx:key="name" class="list-item" hover-class="list-tap" data-avatar="{{item.avatar}}" data-name="{{ item.nickName }}" data-user="{{item.username}}" bindtap="goChart">
            <view class="avatar">
                <image class="avatar-img" src="{{item.avatar}}" mode="scaleToFill" lazy-load="true" binderror="" bindload=""></image>
                <view wx:if="{{item.unread_msg_count>0}}" class="count">{{item.unread_msg_count}}</view>
            </view>
            <view class="body">
                <view class="name">{{ item.nickName }}</view>
                <view class="info">{{ info }}</view>
            </view>
        </view>
    </view>
    <scroll-view wx:if="{{content == 'message'}}" class="" scroll-y="true" upper-threshold="50" lower-threshold="50" scroll-top="0" enable-back-to-top="true" bindscrolltoupper="" bindscrolltolower="loadData" bindscroll="">
        <view class="list-item" hover-class="list-tap" hover-stop-propagation="false">
            <view class="avatar">
                
            </view>
            <view class="body">
                <view class="name"></view>
                <view class="info"></view>
            </view>
        </view>
    </scroll-view>
</view>