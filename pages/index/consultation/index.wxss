}

.consul-page-anonymous-view {
  margin-top: 35rpx;
  margin-left: 35rpx;
}

.consul-page-anonymous {
  border: 1rpx solid #b5b5b5;
  border-radius: 50%;
  width: 25rpx;
  height: 25rpx;
}

.consul-page-publist {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #717171;
  position: relative;
}

.consul-page-line {
  height: 1rpx;
  width: 100%;
  background-color: #b5b5b5;
  position: absolute;
  bottom: 10%;
