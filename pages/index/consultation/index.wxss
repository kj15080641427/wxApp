.consul-picker {
  padding-left: 35rpx;
  padding-right: 35rpx;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
}

.consul-page-line-center {
  background-color: #f4f4f4;
  height: 1rpx;
  width: 680rpx;
  margin-left: 35rpx;
  margin-right: 35rpx;
}

.consul-page-flex {
  display: flex;
  align-items: center;
}

.consul-picker-text {
  /* width: 200rpx; */
  font-size: 32rpx;
  color: #323232;
}

.consul-picker-text-glass {
  font-size: 28rpx;
  color: #b5b5b5;
  margin-right: 20rpx;
}

.consul-page-textarea {
  background-color: white;
  padding-left: 35rpx;
  padding-right: 35rpx;
  font-size: 32rpx;
  color: #323232;
  height: 500rpx;
  width: 680rpx;
  margin-top: 35rpx;
