<view class='index'>
  <!-- 搜索框 -->
  <view class='index-layout index-input-height'>
  <view class='index-search'>
    <image src='../../image/homeicon_3x/homepage_01_3x.png' style='width:40rpx;height:40rpx;margin-right:20rpx ' ></image>
    <input placeholder='搜索问题、律师、服务' placeholder-style='color:#ffffff;' confirm-type="search"  ></input>
  </view>
    <image src='../../image/homeicon_3x/homepage_02_3x.png' class='index-news'></image>
    <!-- 消息小于两位数 -->
    <view class='index-tips' bindtap='clearTips' wx:if="{{tipsOne}}">
     <view class='index-tips-text'>{{tipsNumber}}</view>
    </view>
    <!-- 消息大于两位数 -->
    <view class='index-tips' bindtap='clearTips' wx:if="{{tipsTwo}}">
     <view class='index-tips-text'>{{tipsNumber}}</view>
    </view>
  </view>
  <!-- 图标 -->
  <view class='index-layout index-background'>
    <view class='index-ml'  bindtap="showModal">
      <view class="index-text-style">
        <image src='../../image/homeicon_3x/homepage_03_3x.png' style='width:100rpx;height:100rpx'></image>
      </view>
      <label class='index-text-style'>免费咨询</label>
      <view class='index-text-style-mini'>
        <label class='index-text-style-green'>免费</label>
        <label class='index-text-style-gray'>排忧解难</label>
      </view>
    </view>
    <view bindtap="gotoQuick">
      <view class="index-text-style" >
        <image src='../../image/homeicon_3x/homepage_04_3x.png' style='width:100rpx;height:100rpx;' ></image>
      </view>
      <label class='index-text-style'>快速咨询</label>
      <view class='index-text-style-mini'>
        <label class='index-text-style-green'>执业律师</label>
        <label class='index-text-style-gray'>即时通话</label>
      </view>
    </view>

    <view  class='index-mr'>
       <view class="index-text-style">
          <image src='../../image/homeicon_3x/homepage_05_3x.png' style='width:100rpx;height:100rpx'></image>
      </view>
      <label class='index-text-style'>专家服务</label>
      <view class='index-text-style-mini'>
        <label class='index-text-style-gray'>知名顾问</label>
        <label class='index-text-style-green '>一对一</label>
      </view>
    </view>
  </view>
  <!-- 中部轮播图片 -->
  <swiper indicator-dots="{{indicatorDots}}"
  autoplay="true" interval="{{interval}}" duration="{{duration}}" 
  previous-margin="20px" next-margin='20px' circular="true"  style="height:260rpx;display:flex;justify-content: center;margin-top:35rpx">
    <block wx:for="{{imgUrls}}" wx:key="index">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="750" height="200"/>
      </swiper-item>
    </block>
  </swiper>

<!-- 服务动态 -->
  <view class='index-service'>
    <image src='../../image/homeicon_3x/homepage_06_3x.png' style='width:90rpx;height:90rpx;margin-top:30rpx'></image>
    <view class='index-service-right'>
      <view class='index-layout'>
        <view>王宏兵律师完成了一次房产土地方面的咨询</view>
        <view style='font-size:20rpx;margin-left:45rpx'>3分钟前</view>
      </view>
      <view class='index-layout' style='margin-top:25rpx'>
        <view>刘妍律师完成了一次婚姻家事方面的咨询</view>
        <view style='font-size:20rpx;margin-left:45rpx'>刚刚</view>
      </view>
    </view>
  </view>
<!-- 热门推荐 -->
  <view class='index-layout index-tab-margin'>
    <view  class='index-text-style'>
      <view class="index-green-line"></view>
      <view style="font-size:32rpx">热门推荐</view>
    </view>
    <view class="index-text-style" catchtap='loadMorePopular' >
      <label  style='font-size:28rpx;color:#b5b5b6' >更多</label>
      <image src="../../image/homeicon_3x/homepage_09_3x.png" style="width:20rpx;height:20rpx;margin-left:10rpx"/>
    </view>
  </view>
<!-- 横向滑动列表 -->
<view class='index-page-line-view'>
  <view class='index-page-line'></view>
</view>
<scroll-view scroll-x class="scroll-x" scroll-left="{{scrollLeft}}">
  <view wx:for="{{popular}}"  wx:key="index" class="view-parent" >
    <view class="{{articleIndex==index ? 'view-item-color' : 'view-item'}}" bindtap="selsectArticle" id="{{index}}" data-current="{{item.id}}" >{{item.categoryName}}</view>
    <view class="{{articleIndex==index ? 'view-item-green-line' : ''}}"></view>
  </view>
</scroll-view>
<!-- 头像 -->
<!-- <view>{{popular}}</view> -->
<!-- <view class="index-tab-margin">
  <view class='index-lawyer-icon'></view>
  <view class="index-lawyer-name">邓松岩</view>
  <view class="index-lawyer-remark">本周人气冠军</view>
</view> -->
<!-- 文章 -->
<!-- <view class='index-page-line-view'>
  <view class='index-page-line'></view>
</view> -->
<swiper class="tab-content" current="{{articleIndex}}" duration="300" bindchange="switchTab"
  >
    <swiper-item wx:key="{{index}}" wx:for="{{popular}}"  id = "{{index}}" >
        <scroll-view scroll-y style="height: 100%;"  scroll-into-view="{{toView}}" scroll-top="0">
      <view wx:key="index" wx:for="{{article}}">
    <view class='index-page-line-view'>
      <view class='index-page-line'></view>
    </view>
    <view class='index-article'>
        <view class="" >
          <view class="index-article-text">{{item["articleName"]}}</view>
          <view class="index-article-text-lower">已帮助<label style="color:#1ec88c">{{item['helpNumber']}}</label>人</view>
        </view>
        <!-- <image src="{{item['articleImageSrc']}}" style='width:223rpx;height:145rpx;'></image> -->
        </view>
      </view> 
                </scroll-view>
    </swiper-item>
</swiper>


  <!-- 加载更多 -->
  <view class='index-layout-center' bindtap="test" >
    <view class='index-more' bindtap='loadMore'>加载更多</view>
  </view>

<!-- 蒙层 -->
<view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
  <!--弹出框  -->
<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
  <!-- 热线咨询 -->
  <view class="modal-dialog" style="margin-top:30rpx" >
    <image src="../../image/homeicon_3x/home_page_07_3x.png"style="width:110rpx;height:100rpx;margin-left:40rpx" />
    <view class="index-consult">
      <view class="index-consult-text">热线咨询</view>
      <view class="index-consult-text-lower" >免费电话咨询,限时15分钟</view>
    </view>
    <image src="../../image/homeicon_3x/homepage_10_3x.png" style="width:40rpx;height:40rpx;margin-right:40rpx"/>
  </view>
  <!-- 图文咨询 -->
  <view class="modal-dialog" bindtap="gotoConstultation">
    <image src="../../image/homeicon_3x/home_page_08_3x.png"style="width:110rpx;height:100rpx;margin-left:40rpx" />
    <view class="index-consult">
      <view class="index-consult-text">文字咨询</view>
      <view class="index-consult-text-lower" >专业律师回复,轻微问题推荐使用</view>
    </view>
    <image src="../../image/homeicon_3x/homepage_10_3x.png" style="width:40rpx;height:40rpx;margin-right:40rpx"/>
  </view>
  <!-- 取消按钮 -->
  <view style="display:flex;justify-content:center;margin-top:30rpx;margin-buttom:200rpx" bindtap="hideModal">
    <image src="../../image/homeicon_3x/homepage_11_3x.png" style="width:50rpx;height:50rpx;margin-buttom:100rpx;margin-top:100rpx"/>
  </view>
</view>
</view>
