</view>
<!-- 蒙层 -->
<view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
  <!--弹出框  -->
<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
  <!-- 热线咨询 -->
<view class="box">
    <picker-view indicator-style="height: 50px;" style="width: 100%; height: 150px;" value="{{value}}" bindchange="bindChange">
        <picker-view-column>
            <view wx:key="{{index}}"wx:for="{{provinces}}">{{item}}</view>
        </picker-view-column>
        <picker-view-column>
            <view wx:key="{{index}}" wx:for="{{citys}}">{{item}}</view>
        </picker-view-column>
        <picker-view-column>
            <view wx:key="{{index}}" wx:for="{{areas}}">{{item.name}}</view>
        </picker-view-column>
    </picker-view>
</view>

