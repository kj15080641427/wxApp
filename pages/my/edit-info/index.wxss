/* pages/my/edit-info/index.wxss */
.info-page{
  /* margin-top: 35rpx */
}
.info-page-flex{
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
}
.info-page-avatar{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  margin-left: 35rpx
}
.info-page-text{
  font-size: 28rpx;
  color: #b5b5b5;
}
.info-page-list{
  display: flex;
  align-items: center;
  height: 80rpx;
  /* justify-content: space-between; */
  /* margin-top: 15rpx; */
  margin-left: 35rpx;
  margin-right: 35rpx;
}
.info-page-input{
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 50rpx;
  font-size: 28rpx;
  color: #323232;
}
.info-page-label{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #b5b5b5;
  width: 150rpx
}
.info-page-center-line{
  height: 1rpx;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  background-color: #f2f2f2;
}
.info-page-line{
  height: 1rpx;
  width: 100%;
  /* margin-left: 5%;
  margin-right: 5%; */
  background-color: #b5b5b5;
  margin-top: 60rpx
}
.info-page-button-view{
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  position: absolute;
  bottom: 0
}
.info-page-button{
  width: 325rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #1ec88c;
  color: white;
  line-height: 80rpx;

}

.box{padding: 20px 15px;}

picker-view view{
  line-height: 50px;
  padding-left:10px;
}
.modal-dialog{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 180rpx;
  margin-left: 75rpx;
  margin-right: 75rpx;
  margin-top: 55rpx;
  border-width: 2rpx;
  border-radius: 10rpx;
  -moz-box-shadow:2px 2px 10px #323232;
  -webkit-box-shadow:2px 2px 10px #323232;
  box-shadow:2px 2px 10px #323232;
}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #323232;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 750rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.index-consult{
  width: 400rpx;
  margin-left: 25rpx;
}
.index-consult-text{
  font-weight: bold;
  font-size: 36rpx;
  color: #323232;
}
.index-consult-text-lower{
  font-size: 24rpx;
  color: #b5b5b5;
  margin-top: 28rpx;
}
.tab-content{
  height: 1000rpx;
  background-color: white;
  padding-top: 30rpx;
  }
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.scoll-h{
  height: 100%
}
