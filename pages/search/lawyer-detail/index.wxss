.centerWord {
  width: 100%;
  position: absolute;
  top: 63rpx;
  left: 70rpx;
  color: red;
}

.follow-lawyer {
  position: absolute;
  right: 0;
  top: 200rpx;
  width: 155rpx;
  height: 50rpx;
  background-color: #272727;
  opacity: 0.6;
  color: #f8b62d;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
}

.back-image {
  width: 70rpx;
  height: 70rpx;
  position: relative;
  z-index: 99999;
}

.go-back {
  position: absolute;
  color: black;
  font-size: 36rpx;
  display: flex;
  align-items: center;
}

.goto-index {
  position: absolute;
  left: 0;
  top: 20rpx;
  width: 155rpx;
  height: 50rpx;
  background-color: #272727;
  opacity: 0.6;
  color: white;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.law-flex {
  display: flex;
}

.law-page-LEX {
  font-size: 24rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.law-page-line {
  margin-top: 40rpx;
  /* margin-right: 35rpx; */
  background-color: #efefef;
  height: 1rpx;
  /* margin-left: 35rpx; */
}
