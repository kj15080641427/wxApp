<!-- 常去机构 -->
<view style='margin-top:35rpx;'>
  <view class='law-flex' style='background-color:white'>
    <view class='law-long-text'>常去机构</view>
    <view class='law-page-industry'>
      <view class='law-page-industry-text' wx:if="{{!lawyerRequset.institution[0]}}" style='margin-top:30rpx;'>暂无信息</view>
      <view wx:key="{{index}}" wx:for="{{lawyerRequset.institution}}" style='margin-top:30rpx;'>
        <view class='law-page-industry-text'>{{item}}</view>
      </view>
    </view>
  </view>
</view>

<!-- 工作经验 -->
<view style='margin-top:35rpx;'>
  <view class='law-flex' style='background-color:white'>
    <view class='law-long-text'>工作经验</view>

    <view class='law-educcation-right'>
    <!-- 工作经验 -->
        <view wx:if='{{!lawyerRequset.workExp[0]}}'  style='font-size:28rpx;margin-top:30rpx;'>暂无信息</view>
      <view wx:key="{{index}}" wx:for="{{work}}"> 
        <view class='law-educ-date'>
          <!-- 圆环 -->
          <view class='law-educ-dot-view'>
            <view class='law-educ-dot'></view>
          </view>
          <view>{{item.startDate}}-</view>
          <view>{{item.endDate}}</view>
        </view>
      </view>

      <view wx:key="{{index}}" wx:for="{{lawyerRequset.workExp}}" class='law-flex'>
        <view class='law-educ-green'></view>
        <view class=''>
          <view  class='law-educ-name'>{{item.institutionName}}</view>
          <view  class='law-educ-lower'>
            <view >{{item.positionName}} </view>
            <!-- <view class='law-educ-margin'> | </view>
            <view> 法学</view> -->
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

<!-- 教育背景 -->
<view style='margin-top:35rpx;'>
  <view class='law-flex' style='background-color:white'>
    <view class='law-long-text'>教育背景</view>

    <view class='law-educcation-right'>
            <view wx:if='{{!lawyerRequset.education[0]}}'  style='font-size:28rpx;margin-top:30rpx;'>暂无信息</view>
      <view wx:key="{{index}}" wx:for="{{education}}"> 
        <view class='law-educ-date'>
          <!-- 圆环 -->
          <view class='law-educ-dot-view'>
            <view class='law-educ-dot'></view>
          </view>
          <view>{{item.startDate}}-</view>
          <view>{{item.endDate}}</view>
        </view>
      </view>

      <view wx:key="{{index}}" wx:for="{{lawyerRequset.education}}" class='law-flex'>
        <view class='law-educ-green'></view>
        <view class=''>
          <view  class='law-educ-name'>{{item.educationTitle}}</view>
          <view  class='law-educ-lower'>
            <view >{{item.educationName}} </view>
            <view class='law-educ-margin'> | </view>
            <view> 法学</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>