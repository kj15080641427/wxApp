<!-- 擅长领域 -->
<view wx:if="{{isshowCard}}">
  <view wx:if="{{lawyerInfo.businessType}}">
    <view class='law-flex' style='background-color:white;height:300rpx;'>
      <view class='law-long-text'>擅长领域</view>

      <view class='law-center-icon'>
        <!-- 1 -->
        <view wx:key="{{index}}" wx:for="{{lawyerInfo.businessType}}">
          <view class='law-space-flex'>
            <view class='law-flex' style=' align-items: center;'>
              <image src="{{index==0? '../../../image/search_icon@3x/Personalhomepage-10@3x.png': index == 1 ? '../../../image/search_icon@3x/Personalhomepage-11@3x.png' :'../../../image/search_icon@3x/Personalhomepage-12@3x.png'}}" class='law-num-icon'></image>
              <view class='law-margin-left'>{{item.businessTypeName}}</view>
            </view>
            <view class='law-center-icon-text'>{{score[index]>100.00?100:score[index]}}%</view>
          </view>
          <view class='law-page-line'></view>
        </view>
      </view>
    </view>

    <!-- 专业技能 -->
    <view style='margin-top:25rpx;' wx:if="{{lawyerInfo.skill[0].children[0]}}">
      <view class='law-flex' style='background-color:white'>
        <view class='law-long-text'>专业技能</view>
        <view class='law-skill-right' style='display:flex;flex-wrap: wrap'>
          <view wx:key="{{index}}" wx:for="{{lawyerInfo.skill[0].children}}" class='skill-background'>
            <view style='display: flex;justify-content: center;width:140rpx'>
              <image class='law-page-skill' src="{{item.iconImage}}"></image>
            </view>
            <view style='display: flex;justify-content: center;width:140rpx'>
              <view>{{item.skillName}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>

    <!-- 熟悉行业 -->
    <view class='law-flex' style='background-color:white' wx:if="{{lawyerInfo.industry[0]}}">
      <view class='law-long-text'>熟悉行业</view>
      <view class='law-page-industry'>
        <view wx:key="{{index}}" wx:for="{{lawyerInfo.industry}}" class='' style='margin-top:30rpx;margin-bottom:20rpx;'>
          <text class='law-page-induistry-view'>{{item}}</text>
        </view>
      </view>
    </view>

    <!-- 语言能力 -->

    <view class='law-flex' style='background-color:white' wx:if="{{lawyerInfo.skill[2].children[0]}}">
      <view class='law-long-text'>语言能力</view>
      <view class='law-skill-right-other'>
        <view wx:key="{{index}}" wx:for="{{lawyerInfo.skill[2].children}}">
          <view style='margin-bottom:15rpx;margin-top:10rpx;' wx:if="{{!item.iconImage}}">{{item.skillName}}</view>
          <view class='law-page-line'></view>
        </view>
      </view>
    </view>


    <!-- 其他技能 -->
    <view wx:if="{{lawyerInfo.skill[1].children[0]}}">
      <view class='law-flex' style='background-color:white'>
        <view class='law-long-text'>其他技能</view>
        <view class='law-skill-right-other'>
          <view wx:key="{{index}}" wx:for="{{lawyerInfo.skill[1].children}}">
            <view style='margin-bottom:15rpx;margin-top:10rpx;' wx:if="{{!item.iconImage}}">{{item.skillName}}</view>
            <view class='law-page-line'></view>
          </view>
        </view>
      </view>
    </view>

    <!-- 资格证书 -->
    <view wx:if="{{lawyerInfo.qualifi[0]}}">
      <view class='law-flex' style='background-color:white'>
        <view class='law-long-text'>资格证书</view>
        <view class='law-qualifi-right'>
          <view wx:key="{{index}}" wx:for="{{lawyerInfo.qualifi}}">
            <view class='law-page-industry-text'>{{item}}</view>
            <view class='law-page-line'></view>
          </view>
        </view>
      </view>
    </view>

    <!-- 常去机构 -->
    <view style='margin-top:35rpx;' wx:if="{{lawyerInfo.institution[0]}}">
      <view class='law-flex' style='background-color:white'>
        <view class='law-long-text'>常去机构</view>
        <view class='law-page-industry'>
          <view style='margin-top:30rpx;'></view>
          <view wx:key="{{index}}" wx:for="{{lawyerInfo.institution}}" style="margin-top:20rpx;">
            <view class='law-page-industry-text'>{{item}}</view>
            <!-- <view class='law-page-line'></view> -->
          </view>
        </view>
      </view>
    </view>

    <!-- 工作经历 -->
    <view style='margin-top:35rpx;' wx:if='{{lawyerInfo.workExp[0]}}'>
      <view class='law-flex' style='background-color:white'>
        <view class='law-long-text'>工作经历</view>

        <view class='law-educcation-right'>
          <view wx:key="{{index}}" wx:for="{{work}}">
            <view class='law-educ-date'>
              <!-- 圆环 -->
              <view class='law-educ-dot-view'>
                <view class='law-educ-dot'></view>
              </view>
              <view>{{item.startDate}}-</view>
              <view>{{item.endDate}}</view>
            </view>
            <view class='law-flex'>
              <view class='law-educ-green'></view>
              <view class=''>
                <view class='law-educ-name'>{{item.positionName}}</view>
                <view class='law-educ-lower'>
                  <view>{{item.institutionName}} </view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>


    <!-- 教育背景 -->
    <view style='margin-top:35rpx;' wx:if='{{lawyerInfo.education[0]}}'>
      <view class='law-flex' style='background-color:white'>
        <view class='law-long-text'>教育背景</view>

        <view class='law-educcation-right'>
          <view wx:key="{{index}}" wx:for="{{education}}">
            <view class='law-educ-date'>
              <!-- 圆环 -->
              <view class='law-educ-dot-view'>
                <view class='law-educ-dot'></view>
              </view>
              <view>{{item.startDate}}-</view>
              <view>{{item.endDate}}</view>
            </view>
            <view class='law-flex'>
              <view class='law-educ-green'></view>
              <view class=''>
                <view class='law-educ-name'>{{item.educationTitle}}</view>
                <view class='law-educ-lower'>
                  <view>{{item.educationName}} </view>
                  <view class='law-educ-margin'> | </view>
                  <view> {{item.verifyComment || '法学'}}</view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

</view>
