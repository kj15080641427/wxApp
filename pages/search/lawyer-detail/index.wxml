</view>

<!-- 资格证书 -->
<view >
  <view class='law-flex' style='background-color:white'>
    <view class='law-long-text'>资格证书</view>
    <view class='law-qualifi-right'>
      <view class='law-page-industry-text' wx:if="{{!lawyerRequset.qualifi[0]}}">暂无信息</view>
      <view wx:key="{{index}}" wx:for="{{lawyerRequset.qualifi}}">
