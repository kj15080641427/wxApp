<!--pages/search/lawyer-detail/index.wxml-->
<view>
  <image mode='aspectFill' class='law-page-background'src="{{lawyerCard.backgroundImage}} "></image>
</view>
<view style='background-color:white;padding-right:35rpx;'>
  <image class='law-page-avatar'src="{{lawyerCache[index].iconImage? lawyerCache[index].iconImage : '../../../image/my_icon@3x/mine_icon_02_3x.png'}}"></image>
  <!-- {{lawyerCache[index].iconImage}} -->
  <view class='law-page-name'>
    <view class='law-flex law-page-name-right'>
      <view>{{lawyerCache[index].memberName}} <text wx:if="{{lawyerCache[index].memberPositionName}}"  class='law-page-min-size'> ({{lawyerCache[index].memberPositionName}})</text></view>
      <view class='law-page-gender-view' style="{{lawyerCache[index].sex==1 ? 'background-color: #76cbbf' :' background-color: #f9c0e7;' }}">
        <image src="{{lawyerCache[index].sex==1 ? '../../../image/my_icon@3x/mine_icon_03_3x.png' : '../../../image/my_icon@3x/mine_icon_04_3x.png'}}" class='law-gender-icon'></image>
        <view>{{age}}岁</view>
      </view>
    </view>
    <view class='law-page-min-size law-page-martop'> {{lawyerCache[index].institutionName}}<text style='color:#b5b5b5'>|</text> 执业{{year[index]}}年</view>
  </view>

  <view class='law-info-flex'>
      <view class='law-page-address'>
        <image src='../../../image/search_icon@3x/Personalhomepage-20@3x.png' class='law-address-icon'></image>
        {{address[0]}}{{address[1]}}<text wx:if="{{!lawyerCache[index].region}}">暂无地址</text>
      </view>
      <view class='law-page-LEX'>
        <image src='../../../image/search_icon@3x/Personalhomepage-05@3x.png' class='law-address-icon'></image>
        <text style='margin-left:10rpx;'>LEX提供最高100,000元服务担保</text>
      </view>
  </view>

  <view class='law-honor-flex' wx:key="{{index}}" wx:for="{{lawyerCard.tags}}">
    <view class='law-page-honor'>{{item}}</view>
  </view>

</view>

<view class='law-page-attest'>
  <view >认证标签</view>
  <view wx:key="{{index}}" wx:for="{{lawyerCache[index].orgTags}}">
    <image class='law-page-attest-icon' src='{{item.image}}'></image>
  </view>
</view>

<!-- 简介 -->
<view class='law-page-Introduction-view'>
  <view class='law-page-Introduction'> 
  <!-- {{lawyerCard.memberDescription}} -->

  <view class='law-textarea'>{{lawyerCard.memberDescription}}</view>
    <image src='../../../image/search_icon@3x/Personalhomepage-06@3x.png' class='law-address-icon law-icon-center'></image>
  </view>
</view>

