<view>
  <image mode='aspectFill' class='law-page-background' style='height:750rpx;' src="{{lawyerCard.backgroundImage ? lawyerCard.backgroundImage:'../../../image/my_icon@3x/mine_icon_01_3x.png'}}" bindtap='showBackgroundImage'></image>
  <view bindtap='toindex' wx:if="{{firstPage}}">
    <view class='goto-index'>
      <text style='margin-left:10rpx;'>回到首页</text>
    </view>
  </view>
  <!-- tab -->
  <view class='go-back' style='height:{{navH-statuH}}px;position: fixed;left:0;top:{{statuH}}px' bindtap='tabBack'>
    <image src='/image/homeicon_3x/back.png' class='back-image'></image>
  </view>
  <view class='follow-lawyer' bindtap="{{ isFollow ? 'unFollow':'follow'}}">
    <image src="{{isFollow ? '../../../image/search_icon@3x/Personalhomepage-02@3x.png':'../../../image/search_icon@3x/Personalhomepage-01@3x.png'}}" style='height:25rpx;width:25rpx;margin-left:20rpx;z-index:1;'></image>
    <text style='margin-left:10rpx;'>{{isFollow ? '已关注':'关注'}}</text>
  </view>
</view>
<image class='law-page-avatar' src="{{lawyerCard.iconImage? lawyerCard.iconImage : '../../../image/my_icon@3x/mine_icon-03@3x.png'}}" bindtap='showImage'></image>
<!-- info -->
<view class='lawyer-info'>
  <view>
    <text class='lawyer-name'>{{lawyerCard.memberName}}</text>
    <text wx:if="{{lawyerCard.memberPositionName}}"> {{lawyerCard.memberPositionName}} | 执业{{year>1?year:1}}年</text>
  </view>
  <view class='law-page-LEX' wx:if="{{lawyerCard.price}}">
    <!-- <image src='' class=''></image> -->
    <text style='margin-left:10rpx;'>LEX提供最高{{lawyerCard.price}}元服务担保</text>
  </view>
  <view class='law-skill-right-other'>
    <text>擅长领域:</text>
    <view wx:key="{{index}}" wx:for="{{lawyerInfo.businessType}}">
      {{item.businessTypeName}},
    </view>
  </view>
  <view class='lawyer-address-firm'>{{address[0]}}{{address[1]}} | {{lawyerCard.institutionName}} </view>
</view>
