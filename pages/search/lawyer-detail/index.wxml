    <view class='law-long-text'>熟悉行业</view>
    <view class='law-page-industry'>
      <view class='law-page-industry-text' wx:if="{{!lawyerRequset.industry[0]}}" style='margin-top:30rpx;'>暂无信息</view>
      <view wx:key="{{index}}" wx:for="{{lawyerRequset.industry}}" class='law-page-induistry-view' style='margin-top:30rpx;'>
