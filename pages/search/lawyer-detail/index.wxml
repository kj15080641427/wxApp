  <view class='law-page-industry'>
    <view class='law-page-industry-text' wx:if="{{!lawyerRequset.industry[0]}}" style='margin-top:30rpx;'>暂无信息</view>
    <view wx:if="{{!lawyerRequset.industry[0]}}" class='law-page-line'></view>
