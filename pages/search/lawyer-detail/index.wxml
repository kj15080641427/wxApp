<!-- 其他技能 -->
<view >
  <view class='law-flex' style='background-color:white'>
    <view class='law-long-text'>其他技能</view>
    <view class='law-skill-right'>
      <view class='law-page-industry-text' wx:if="{{!lawyerRequset.skill[0]}}">暂无信息</view>
      <view wx:key="{{index}}" wx:for="{{lawyerRequset.skill}}">
        <view style='margin-bottom:35rpx;'>{{item.skillName}}</view>
      </view>
    </view>
