<!-- 专业技能 -->
<view style='margin-top:35rpx;'>
  <view class='law-flex' style='background-color:white'>
    <view class='law-long-text'>专业技能</view>
    <view class='law-skill-right' style='display:flex;flex-wrap: wrap'>
      <view wx:key="{{index}}" wx:for="{{lawyerRequset.skill}}" wx:if="{{item.parentId ==1}}" style='word-wrap:break-word;' >
          <view style='display: flex;justify-content: center;width:140rpx'>
           <image wx:if="{{item.parentId ==1}}" class='law-page-skill' src="{{item.iconImage}}"></image>
           </view>
