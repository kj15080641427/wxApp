  <canvas class='radarCanvas' canvas-id='radarCanvas'></canvas>
</view> -->
<!-- 专业技能 -->
<view class='skill-style-view'>
  <view style='width:150rpx;'>专业技能</view>
  <view class='skill-style'>
    <text wx:key="{{index}}" wx:for="{{lawyerInfo.skill[0].children}}" style='margin-right:20rpx'>{{item.skillName}}</text>
  </view>
</view>

<!-- 熟悉行业 -->
<view class='skill-style-view' wx:if="{{lawyerInfo.industry[0]}}">
  <view style='width:150rpx;'>熟悉行业</view>
  <view class='skill-style'>
    <text wx:key="{{index}}" wx:for="{{lawyerInfo.industry}}" style='margin-right:20rpx'>{{item}}</text>
  </view>
</view>
<!-- 语言能力 -->
<view class='skill-style-view' wx:if="{{lawyerInfo.skill[2].children[0]}}">
  <view style='width:150rpx;'>语言能力</view>
  <view class='skill-style'>
    <text wx:key="{{index}}" wx:for="{{lawyerInfo.skill[2].children}}" style='margin-right:20rpx'>{{item.skillName}}</text>
  </view>
</view>
<!-- 其他技能 -->
<view class='skill-style-view' wx:if="{{lawyerInfo.skill[1].children[0]}}">
  <view style='width:150rpx;'>其他技能</view>
  <view class='skill-style'>
    <text wx:key="{{index}}" wx:for="{{lawyerInfo.skill[1].children}}" style='margin-right:20rpx'>{{item.skillName}}</text>
  </view>
</view>
<!-- 资格证书 -->
<view class='skill-style-view' wx:if="{{lawyerInfo.qualifi[0]}}">
  <view style='width:150rpx;'>资格证书</view>
  <view class='skill-style'>
    <text wx:key="{{index}}" wx:for="{{lawyerInfo.qualifi}}" style='margin-right:20rpx'>{{item}}</text>
  </view>
</view>
<!-- 个人履历 -->
<view>
  <view>个人履历</view>
  <view>{{lawyerCard.memberDescription}}</view>
</view>

<!-- 常去机构 -->
<view style='margin-top:35rpx;' wx:if="{{court[0]}}">
  <view class='law-flex' style='background-color:white'>
    <view class='law-long-text'>常去法院</view>
    <view class='law-page-industry'>
      <view style='margin-top:30rpx;'></view>
      <view wx:key="{{index}}" wx:for="{{court}}" style="margin-top:20rpx;">
        <view class='law-page-industry-text'>{{item}}</view>
        <!-- <view class='law-page-line'></view> -->
      </view>
    </view>
  </view>
</view>
<!-- 常去检察院 -->
<view wx:if="{{proc[0]}}">
  <view class='law-flex' style='background-color:white'>
    <view class='law-long-text'>常去机构</view>
    <view class='law-page-industry'>
      <view style='margin-top:30rpx;'></view>
      <view wx:key="{{index}}" wx:for="{{proc}}" style="margin-top:20rpx;">
        <view class='law-page-industry-text'>{{item}}</view>
        <!-- <view class='law-page-line'></view> -->
      </view>
    </view>
  </view>
</view>

<!-- 工作经历 -->
<view style='margin-top:35rpx;' wx:if='{{lawyerInfo.workExp[0]}}'>
  <view class='law-flex' style='background-color:white'>
    <view class='law-long-text'>工作经历</view>

    <view class='law-educcation-right'>
      <view wx:key="{{index}}" wx:for="{{work}}">
        <view class='law-educ-date'>
          <!-- 圆环 -->
          <view class='law-educ-dot-view'>
            <view class='law-educ-dot'></view>
          </view>
          <view>{{item.startDate}}-</view>
          <view>{{item.endDate}}</view>
        </view>
        <view class='law-flex'>
          <view class='law-educ-green'></view>
          <view class=''>
            <view class='law-educ-name'>{{item.positionName}}</view>
            <view class='law-educ-lower'>
              <view>{{item.institutionName}} </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>


<!-- 教育背景 -->
<view style='margin-top:35rpx;' wx:if='{{lawyerInfo.education[0]}}'>
  <view class='law-flex' style='background-color:white'>
    <view class='law-long-text'>教育背景</view>

    <view class='law-educcation-right'>
      <view wx:key="{{index}}" wx:for="{{education}}">
        <view class='law-educ-date'>
          <!-- 圆环 -->
          <view class='law-educ-dot-view'>
            <view class='law-educ-dot'></view>
          </view>
          <view>{{item.startDate}}-</view>
          <view>{{item.endDate}}</view>
        </view>
        <view class='law-flex'>
          <view class='law-educ-green'></view>
          <view class=''>
            <view class='law-educ-name'>{{item.educationTitle}}</view>
            <view class='law-educ-lower'>
              <view>{{item.educationName}} </view>
              <!-- <view class='law-educ-margin'> | </view> -->
              <!-- <view> {{item.verifyComment || '法学'}}</view> -->
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>


