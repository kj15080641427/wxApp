/* pages/search/index.wxss */
.search-input-height{
  display: flex;
  align-items: center;
  height: 100rpx;
  background-color: #1ec88c;
  border-top: 1rpx solid #32b987
}
.index-search{
  display: flex;
  align-items: center;
  height: 70rpx;
  width: 680rpx;
  margin-left: 35rpx;
  margin-right: 35rpx;
  background-color: #32b987;
  /* margin-top: 15rpx; */
  padding-left: 20rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.serach-select-sort{
  position: relative;
  padding-left: 35rpx;
  height: 100rpx;
  width: 750rpx;
  line-height: 100rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.search-tab{
  display: flex;
}
.search-tab-icon{
  width: 300rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search-page-icon{
  margin-left: 10rpx;
  /* margin-top: 10rpx; */
  width:20rpx;
  height:20rpx
}
.search-tab-list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background-color: white;
  padding-left: 35rpx;
  padding-right: 35rpx;
}
.search-tab-text{
  color: #b5b5b5;
  font-size: 24rpx;
}
/* pages/my/watchlist/index.wxss */
