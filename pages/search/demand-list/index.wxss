  background-color:white;
  margin-left:35rpx;
  margin-right:35rpx
}
.lawyerList-tab{
  background-color:white;
  width:700rpx;
  margin-left:25rpx
}
.demand-button{
  width: 120rpx;
  height: 40rpx;
  background-color: #1ec88c;
  border-radius: 20rpx;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 40rpx;
  font-weight:normal;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 35rpx;
}