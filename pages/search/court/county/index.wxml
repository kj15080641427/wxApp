<view class='court-view'>
  <view class='court'>中级人民法院</view>
  <view style='background-color:#f4f4f4;height:1rpx;margin-right:35rpx;'></view>
  <view class='court-text' wx:key="{{index}}" wx:for="{{bestCourt}}"  bindtap='selectBestCourt' data-courtbestindex="{{index}}">{{item.institutionName}}</view>
</view>
<view class='court-view'>
<view class='court'>基层法院</view>
  <view style='background-color:#f4f4f4;height:1rpx;margin-right:35rpx;'></view>
<view class='court-text' wx:key="{{index}}" wx:for="{{otherCourt}}" data-courtindex="{{index}}" bindtap='selectCourt'>{{item.institutionName}}</view>
</view>