<!--pages/search/filter/index.wxml-->
<!-- 年限 -->
<view class='filter-page-top filter-background'>执业年限</view>
<view style='background-color:white'>
  <view class='filter-page-line'></view>
</view>

<view class='filter-page-frame-view filter-background'>
  <view class="{{select == 1 ? 'filter-page-frame-color' :'filter-page-frame'}}"><text class='filter-page-frame-text'bindtap="changeColor1" >{{search[0].items[0].text}}</text></view>
  <view class="{{select == 2 ? 'filter-page-frame-color' :'filter-page-frame'}}"><text bindtap="changeColor2"class='filter-page-frame-text'>{{search[0].items[1].text}}</text></view>
  <view class="{{select == 3 ? 'filter-page-frame-color' :'filter-page-frame'}}"><text bindtap="changeColor3" class='filter-page-frame-text'>{{search[0].items[2].text}}</text></view>
  <view class="{{select == 4 ? 'filter-page-frame-color' :'filter-page-frame'}}"><text bindtap="changeColor4"class='filter-page-frame-text'>{{search[0].items[3].text}}</text></view>
  <view class="{{select == 5 ? 'filter-page-frame-color' :'filter-page-frame'}}"><text bindtap="changeColor5"class='filter-page-frame-text'>{{search[0].items[4].text}}</text></view>
  <view class="{{select == 6 ? 'filter-page-frame-color' :'filter-page-frame'}}"><text bindtap="changeColor6"class='filter-page-frame-text'>{{search[0].items[5].text}}</text></view>
</view>

<!-- 性别 -->
<view class='filter-page-gender-top filter-background'>律师性别</view>
<view style='background-color:white'>
  <view class='filter-page-line'></view>
</view>
<view class='filter-page-gender-view filter-background'>
  <view class="{{gender == '0' ? 'filter-page-gender-color' :'filter-page-gender'}}" bindtap='gender0'><text class='filter-page-frame-text'>{{search[1].items[0].text}}</text></view>
  <view  class="{{gender == '1' ? 'filter-page-gender-color' :'filter-page-gender'}}" bindtap='gender1'><text class='filter-page-frame-text'>{{search[1].items[1].text}}</text></view>
  <view  class="{{gender == '2' ? 'filter-page-gender-color' :'filter-page-gender'}}" bindtap='gender2'><text class='filter-page-frame-text'>{{search[1].items[2].text}}</text></view>
</view>

<!-- 行业 -->
<view wx:key="*this" wx:for="{{search}}"  wx:if="{{item.text !='执业年限' && item.text !='律师性别'}}" data-getindex='{{index}}' catchtap='getType' bindtap="getList">
  <view class='filter-page-cneter filter-background' >
    <view style='display:flex;'>
      <picker bindchange="bindPickerChange" style='width:600rpx;height:60rpx;line-height:60rpx' range="{{search[index].items}}" range-key="{{'text'}}" >{{item.text}}<text style="margin-left:35rpx;color:black" >{{search[index].items[indexPicker].text}}</text></picker>
      <!-- {{item.items[indexPicker].text}} -->
      <!-- wx:if="{{index==listIndex || click }}" -->
    </view>
    <image src='../../../image/homeicon_3x/homepage_09_3x.png' class='filter-page-icon'></image>
  </view>
  <view style='background-color:white'>
    <view class='filter-page-line'></view>
  </view>
</view>

<view style='height:35rpx'></view>
